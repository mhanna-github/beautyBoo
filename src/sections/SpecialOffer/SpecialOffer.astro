---
import '@styles/animations.scss';
import Image from '@components/Image/Image.astro';
---

<section data-scroll-section class="u-overflow-hidden lg:u-overflow-visible">
    <div class="u-mt-[20vw] u-flex u-flex-col u-items-center u-gap-gutter">
        <h2 class="u-text-h2 u-uppercase">
            <span
                class="u-rounded-[50px] u-bg-primary u-px-4 u-py-1 u-underline lg:u-px-4 lg:u-py-2"
                >Special</span
            > Offer
        </h2>
        <div class="w-screen u-flex u-flex-col lg:u-flex-row">
            <div class="u-relative u-w-full">
                <figure class="u-max-w-1/2 u-w-full">
                    <Image
                        src={import('@images/SpecialOfferBg.png')}
                        alt="Special Offer"
                        loading="lazy"
                        class="u-h-full u-w-full u-object-contain"
                    />
                </figure>
                <div>
                    <figure
                        class="u-animate-float-small u-absolute -u-top-[12%] u-left-0 u-z-30 u-max-w-[32vw] lg:u-max-w-[20vw]"
                    >
                        <Image
                            src={import('@images/Balm.png')}
                            alt="Special Offer"
                            loading="lazy"
                            class="u-h-full u-w-full u-object-contain"
                            loading="lazy"
                        />
                    </figure>
                    <figure
                        class="u-animate-float-medium u-absolute u-left-[18%] u-top-[5%] u-z-30 u-max-w-[35vw] lg:u-max-w-[22vw]"
                    >
                        <Image
                            src={import('@images/Cream.png')}
                            alt="Special Offer"
                            class="u-h-full u-w-full u-object-contain"
                            loading="lazy"
                        />
                    </figure>
                    <figure
                        class="u-animate-float-large u-absolute u-bottom-0 u-left-[60%] u-z-30 u-max-w-[29vw] lg:u-max-w-[15vw]"
                    >
                        <Image
                            src={import('@images/Foam.png')}
                            alt="Special Offer"
                            loading="lazy"
                            class="u-h-full u-w-full u-object-contain"
                        />
                    </figure>
                    <figure class="u-absolute u-bottom-0 u-left-0 u-z-40">
                        <Image
                            src={import('@images/Clouds.png')}
                            alt="Special Offer"
                            loading="lazy"
                            class="u-h-full u-w-full u-object-contain"
                        />
                    </figure>
                    <figure
                        class="u-animate-float-large u-absolute -u-bottom-[15%] u-left-[30%] u-z-50 u-max-w-[40vw] lg:u-max-w-[22vw]"
                    >
                        <Image
                            src={import('@images/scrub.png')}
                            alt="Special Offer"
                            loading="lazy"
                            class="u-h-full u-w-full u-object-contain"
                        />
                    </figure>
                    <figure
                        class="u-animate-float-small u-absolute -u-bottom-[20%] -u-right-[12%] u-z-50 u-max-w-[30vw] lg:u-max-w-[18vw]"
                    >
                        <Image
                            src={import('@images/spray.png')}
                            alt="Special Offer"
                            loading="lazy"
                            class="u-h-full u-w-full u-object-contain"
                        />
                    </figure>
                </div>
            </div>
            <div
                class="u-max-w-1/2 u-z-[99] u-flex u-w-full u-bg-lightBlue lg:u-z-10 lg:u-items-center lg:u-justify-center"
            >
                <div class="u-px-[8vw] u-py-[2vw]">
                    <h3 class="u-mb-[1vw] u-text-h4 u-uppercase">
                        Buy our starter BeautyBoo care-kit, which includes :
                    </h3>
                    <ul
                        class="u-flex u-list-disc u-flex-col u-gap-[1vw] lg:u-ml-[2vw] lg:u-gap-[0.5vw]"
                    >
                        <li>
                            <p class="u-text-h4">Gentle & clensing Face foam</p>
                        </li>
                        <li>
                            <p class="u-text-h4">Gentle & clensing Face scrub</p>
                        </li>
                        <li>
                            <p class="u-text-h4">Protecting & calming Face cream</p>
                        </li>
                        <li>
                            <p class="u-text-h4">Heat protection & recovering Hair spray</p>
                        </li>
                        <li>
                            <p class="u-text-h4">Moistrizing & smoothing Hair Balm</p>
                        </li>
                    </ul>
                    <h3 class="u-mt-[1vw] u-text-h4 u-uppercase lg:u-ml-[2vw]">
                        With 10% discount and a gift
                    </h3>
                </div>
            </div>
        </div>
    </div>
</section>
